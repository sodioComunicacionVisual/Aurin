---
import Layout from '../layouts/Layout.astro';
import Header from '../components/UI/Header.astro';
import UsBanner from '../components/Us/UsBanner.astro';
import MainImage from '../components/Us/MainImage.astro';
import RutasInexploradas from '../components/Us/RutasInexploradas.astro';
import LongCards from '../components/Us/LongCards.astro';
import ComoLlegamos from '../components/Us/ComoLlegamos.astro';
import DisenoColaboracion from '../components/Us/DisenoColaboracion.astro';
import Alianzas from '../components/Us/Alianzas.astro';
import Projects from '../components/Home/Projects.astro';
import Footer from '../components/UI/Footer.astro';

// SEO optimizado para LLMs y motores de búsqueda
const seoTitle = "Nosotros - Aurin | Agencia de Comunicación Visual y Diseño México";
const seoDescription = "Conoce a Aurin, realizadores de experiencias a través del diseño y la tecnología. Somos una agencia de comunicación visual especializada en branding, diseño gráfico e identidad corporativa en México. Descubre nuestra historia, metodología y equipo creativo.";
const seoKeywords = "sobre aurin, agencia diseño méxico, equipo creativo, historia aurin, metodología diseño, comunicación visual méxico, branding agency, diseño gráfico profesional";

// Datos estructurados para SEO (Schema.org)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "mainEntity": {
    "@type": "Organization",
    "name": "Aurin",
    "url": "https://aurin.mx",
    "logo": "https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/aurinWhiteLogo.webp",
    "description": "Realizadores de experiencias a través del diseño y la tecnología. Agencia de comunicación visual especializada en branding, diseño gráfico e identidad corporativa.",
    "foundingDate": "2020",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Aldea Creativa",
      "addressCountry": "MX"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "email": "hey@aurin.mx",
      "contactType": "customer service",
      "areaServed": "MX",
      "availableLanguage": "Spanish"
    },
    "sameAs": [
      "https://aldeacreativa.mx/"
    ],
    "knowsAbout": [
      "Diseño Gráfico",
      "Branding",
      "Identidad Corporativa",
      "Comunicación Visual",
      "Estrategia Digital",
      "UX/UI Design"
    ],
    "areaServed": "MX",
    "serviceType": [
      "Diseño Gráfico",
      "Branding",
      "Identidad Corporativa",
      "Comunicación Visual",
      "Estrategia Digital"
    ]
  }
};

// Selectores CSS para contenido speakable (optimización de voz)
const speakable = [".us-banner", ".rutas-inexploradas", ".como-llegamos", ".diseno-colaboracion"];
---

<Layout 
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  structuredData={structuredData}
  speakable={speakable}
  canonical="https://aurin.mx/nosotros"
  ogImage="https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/aurinWhiteLogo.webp"
>
  <Header />
  <main>
    <UsBanner />
    <MainImage />
    <RutasInexploradas />
    <LongCards />
    <ComoLlegamos />
    <DisenoColaboracion />
    <Alianzas />
    <Projects />
  </main>
  <Footer />
</Layout>

<style>
  main {
    width: 100%;
    background: var(--color-black-a);
  }
</style>
