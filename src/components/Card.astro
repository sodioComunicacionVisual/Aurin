---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<a href={href} class="card" target="_blank" rel="noopener noreferrer">
	<h2>
		{title}
		<span>&rarr;</span>
	</h2>
	<p>{body}</p>
</a>

<style>
	.card {
		display: block;
		padding: 1.5rem;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 8px;
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: all 0.3s ease;
		text-decoration: none;
		color: white;
	}
	
	.card:hover {
		background-color: #2a2d35;
		border-color: rgba(255, 93, 1, 0.5);
		transform: translateY(-4px);
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
	}
	
	h2 {
		margin: 0;
		font-size: 1.5rem;
		transition: color 0.3s ease;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	
	.card:hover h2 {
		color: #ff5d01;
	}
	
	p {
		margin-top: 0.75rem;
		margin-bottom: 0;
		color: rgba(255, 255, 255, 0.7);
		font-size: 1rem;
		line-height: 1.5;
	}
	
	span {
		transition: transform 0.3s ease;
		display: inline-block;
	}
	
	.card:hover span {
		transform: translateX(4px);
	}
</style>
