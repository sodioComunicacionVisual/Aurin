---
import MainButton from '../UI/MainButton.astro';
import { getLangFromUrl } from '../../i18n/utils.js';
import { translations } from '../../i18n/translations.js';

// Detect current language
const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang];
---

<section class="us-banner">
  <div class="banner-container">
    <!-- Título principal -->
    <div class="title-section">
      <h1 class="banner-title">
        {t.about.usBanner.title}
      </h1>
    </div>

    <!-- Descripción -->
    <div class="description-section">
      <div class="description-content">
        <p class="banner-description">
          {t.about.usBanner.description}
        </p>
      </div>
    </div>

    <!-- Botón de acción -->
    <div class="button-section">
      <MainButton 
        text={t.about.usBanner.buttonText}
        href="/contacto"
        class="banner-button"
      />
    </div>
  </div>
</section>

<style>
  .us-banner {
    width: 100%;
    background: var(--color-black-a);
    padding-block-start: clamp(5rem, 10vh, 8rem);
    padding:200px 0px 100px 0px;
    
  }

  .banner-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: clamp(0.625rem, 2vw, 1.25rem);
  }

  /* Título Section */
  .title-section {
    padding-block: clamp(1rem, 2vh, 1.5rem);
    padding-inline: clamp(1.25rem, 8vw, 6.25rem);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .banner-title {
    text-align: center;
    color: var(--color-yellow);
    font-size: clamp(1.75rem, 4vw, 3rem);
    font-family: var(--font-heading);
    font-weight: 300;
    line-height: 1.1;
    word-wrap: break-word;
    margin: 0;
  }

  /* Description Section */
  .description-section {
    padding-block: clamp(1rem, 2vh, 1.5rem);
    padding-inline: clamp(1.25rem, 8vw, 6.25rem);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: clamp(2rem, 5vw, 3.75rem);
  }

  .description-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .banner-description {
    text-align: center;
    color: var(--color-white);
    font-size: clamp(0.9375rem, 1.5vw, 1.25rem);
    font-family: var(--font-body);
    font-weight: 400;
    line-height: 1.5;
    word-wrap: break-word;
    margin: 0;
  }

  /* Button Section */
  .button-section {
    padding-block: clamp(1rem, 2vh, 1.5rem);
    padding-inline: clamp(1.25rem, 8vw, 6.25rem);
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
