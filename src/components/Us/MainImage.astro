---
// MainImage component - Imagen principal de la secci√≥n Nosotros
import { getLangFromUrl } from '../../i18n/utils.js';
import { translations } from '../../i18n/translations.js';

// Detect current language
const currentLang = getLangFromUrl(Astro.url);
const t = translations[currentLang];
---

<section class="main-image-section">
  <div class="image-wrapper">
    <img 
      src="https://pub-d17bbbdbf8e348c5a57c8168ad69c92f.r2.dev/NosotrosImage.webp"
      alt={t.about.mainImage.alt}
      class="main-image"
      loading="lazy"
      decoding="async"
    />
  </div>
</section>

<style>
  .main-image-section {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .image-wrapper {
    width: 100%;
    aspect-ratio: 16 / 9;
    max-height: 500px;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .image-wrapper::before {
    content: '';
    position: absolute;
    inset: 0;
    background: 
      linear-gradient(to right, rgba(10, 10, 10, 1) 0%, transparent 20%, transparent 80%, rgba(10, 10, 10, 1) 100%),
      rgba(10, 10, 10, 0.3);
    z-index: 1;
    pointer-events: none;
  }

  .main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  /* Responsive adjustments */
  @media (max-width: 1200px) {
    .image-wrapper {
      aspect-ratio: 4 / 3;
    }
  }

  @media (max-width: 768px) {
    .image-wrapper {
      aspect-ratio: 3 / 2;
    }
  }

  @media (max-width: 480px) {
    .image-wrapper {
      aspect-ratio: 1 / 1;
    }
  }
</style>
